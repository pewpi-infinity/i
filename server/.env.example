# Environment variables for commit-server
# Copy this to .env and fill in your values

# GitHub personal access token (fine-grained)
# Required permissions: Contents (read & write) for repository pewpi-infinity/i
GITHUB_TOKEN=your_github_token_here

# Secret for authenticating commit requests
# Set this to a random string (e.g., generate with: openssl rand -hex 32)
COMMIT_SECRET=your_commit_secret_here

# Server port (optional, defaults to 3000)
PORT=3000
# GitHub Personal Access Token with repo write permissions
# Get one at: https://github.com/settings/tokens
# Needs 'repo' scope to commit to the repository
GITHUB_TOKEN=ghp_your_token_here

# Secret key for authenticating commit requests
# Generate a random string (e.g., openssl rand -hex 32)
COMMIT_SECRET=your_secret_key_here

# Port for the commit server
PORT=3000

# Repository details (normally these are fixed but can be overridden)
GITHUB_OWNER=pewpi-infinity
GITHUB_REPO=i
# GitHub Personal Access Token with repo scope
# Generate at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_token_here

# Shared secret for authenticating commit requests
# Set this to a random string (e.g., use openssl rand -hex 32)
COMMIT_SECRET=your_secret_here

# Port for the server (default: 3000)
PORT=3000

# GitHub repository details (default: pewpi-infinity/i)
GITHUB_OWNER=pewpi-infinity
GITHUB_REPO=i
GITHUB_LOG_PATH=logs/txt.log
# Copy to server/.env and edit with real values. DO NOT commit server/.env.
GITHUB_TOKEN=ghp_REPLACE_WITH_YOUR_TOKEN
COMMIT_SECRET=replace_with_a_random_string
PORT=4000
